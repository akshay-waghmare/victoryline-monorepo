# ====================================
# VictoryLine Docker Environment
# ====================================
# Copy this file to .env and adjust values as needed
# DO NOT commit .env file to version control

# ====================================
# MySQL Database Configuration
# ====================================
MYSQL_ROOT_PASSWORD=your_secure_root_password
MYSQL_DATABASE=cricket_db
MYSQL_USER=cricket_user
MYSQL_PASSWORD=your_secure_password
MYSQL_PORT=3306

# ====================================
# Backend (Spring Boot) Configuration
# ====================================
BACKEND_PORT=8099

# JWT Configuration
JWT_SECRET=your_very_long_and_secure_jwt_secret_key_at_least_256_bits
JWT_EXPIRATION=86400

# Database settings
SHOW_SQL=false

# Spring Profile (default, dev, prod)
SPRING_PROFILES_ACTIVE=default

# ====================================
# Frontend (Angular) Configuration
# ====================================
# Note: Frontend port only exposed internally when using Caddy
# External access is through Caddy on ports 80/443
NODE_VERSION=16.20.2

# ====================================
# Caddy Reverse Proxy Configuration
# ====================================
CADDY_HTTP_PORT=80
CADDY_HTTPS_PORT=443

# ====================================
# Redis Cache Configuration
# ====================================
REDIS_PORT=6379

# ====================================
# Prerender Service Configuration
# ====================================
PRERENDER_PORT=9100
PRERENDER_INTERVAL_MINUTES=3

# ====================================
# Scraper (Python Flask) Configuration
# ====================================
SCRAPER_PORT=5000
FLASK_ENV=production
FLASK_DEBUG=0

# ====================================
# Docker Build Options
# ====================================
# Uncomment to use BuildKit for faster builds
# DOCKER_BUILDKIT=1
# COMPOSE_DOCKER_CLI_BUILD=1
