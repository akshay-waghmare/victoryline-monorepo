# ====================================
# VictoryLine Docker Environment
# ====================================
# Copy this file to .env and adjust values as needed
# DO NOT commit .env file to version control

# ====================================
# MySQL Database Configuration
# ====================================
MYSQL_ROOT_PASSWORD=your_secure_root_password
MYSQL_DATABASE=cricket_db
MYSQL_USER=cricket_user
MYSQL_PASSWORD=your_secure_password
MYSQL_PORT=3306

# ====================================
# Backend (Spring Boot) Configuration
# ====================================
BACKEND_IMAGE=macubex/victoryline-backend:v1.1.0
BACKEND_PORT=8099

# JWT Configuration
JWT_SECRET=your_very_long_and_secure_jwt_secret_key_at_least_256_bits
JWT_EXPIRATION=86400

# Database settings
SHOW_SQL=false

# Spring Profile (default, dev, prod)
SPRING_PROFILES_ACTIVE=default

# ====================================
# Frontend (Angular) Configuration
# ====================================
FRONTEND_IMAGE=macubex/victoryline-frontend:v1.2.0
FRONTEND_PORT=80
NODE_VERSION=16.20.2

# ====================================
# Scraper (Python Flask) Configuration
# ====================================
SCRAPER_IMAGE=macubex/victoryline-scraper:v1.1.4
SCRAPER_PORT=5000
FLASK_ENV=production
FLASK_DEBUG=0
PLAYWRIGHT_HEADLESS=true

# Resilience Features (004-scraper-resilience)
SCRAPER_MAX_LIFETIME_HOURS=6
MEMORY_SOFT_LIMIT_MB=1536
MEMORY_HARD_LIMIT_MB=2048
POLLING_INTERVAL_SECONDS=2.5
POLLING_MIN_SECONDS=2
POLLING_BREAK_SECONDS=30
PAGE_TIMEOUT_SECONDS=30
ENABLE_PROMETHEUS_METRICS=true
PROMETHEUS_PORT=9090
STALENESS_THRESHOLD_SECONDS=60
PID_SOFT_LIMIT=360
PID_RESTART_THRESHOLD=360

# ====================================
# Docker Build Options
# ====================================
# Uncomment to use BuildKit for faster builds
# DOCKER_BUILDKIT=1
# COMPOSE_DOCKER_CLI_BUILD=1
